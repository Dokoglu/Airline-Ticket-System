package com.eticket.ETicket.demo.model;

import jakarta.persistence.Entity;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;

@Entity
public class Flight {
	
	@Id
	private int flightID;
	private int durationOfFlight;
	private String departureAirport;
	private String arrivalAirport;
	private String departureCity;
	private String arrivalCity;
	private int currentQuota;
	private int targetQuoata;
	private int flightPrice;
	
	public Flight(int flightID, int durationOfFlight, String departureAirport,
			String arrivalAirport, String departureCity, String arrivalCity,
			int currentQuota, int targetQuota, int flightPrice) {
		this.flightID = flightID;
		this.durationOfFlight = durationOfFlight;
		this.departureAirport = departureAirport;
		this.arrivalAirport = arrivalAirport;
		this.departureCity=departureCity;
		this.arrivalCity=arrivalCity;
		this.currentQuota=currentQuota;
		this.targetQuoata=targetQuota;
		this.flightPrice=flightPrice;
		
	}
	public Flight() {
		
		}

	public String getDepartureCity() {
		return departureCity;
	}

	public void setDepartureCity(String departureCity) {
		this.departureCity = departureCity;
	}

	public String getArrivalCity() {
		return arrivalCity;
	}

	public void setArrivalCity(String arrivalCity) {
		this.arrivalCity = arrivalCity;
	}

	public void setFlightID(int flightID) {
		this.flightID = flightID;
	}

	public int getFlightID() {
		return flightID;
	}



	public int getDurationOfFlight() {
		return durationOfFlight;
	}

	public void setDurationOfFlight(int durationOfFlight) {
		this.durationOfFlight = durationOfFlight;
	}

	public String getDepartureAirport() {
		return departureAirport;
	}

	public void setDepartureAirport(String departureAirport) {
		this.departureAirport = departureAirport;
	}

	public String getArrivalAirport() {
		return arrivalAirport;
	}

	public void setArrivalAirport(String arrivalAirport) {
		this.arrivalAirport = arrivalAirport;
	}
	
	public int getCurrentQuota() {
		return currentQuota;
	}
	public void setCurrentQuota(int currentQuota) {
		this.currentQuota = currentQuota;
	}
	public int getTargetQuoata() {
		return targetQuoata;
	}
	public void setTargetQuoata(int targetQuoata) {
		this.targetQuoata = targetQuoata;
	}
	

	public int getFlightPrice() {
		return flightPrice;
	}
	public void setFlightPrice(int flightPrice) {
		this.flightPrice = flightPrice;
	}


	@ManyToOne
	@JoinColumn(name="airline_ID")
	private Airline airline;
	
	
	

}
